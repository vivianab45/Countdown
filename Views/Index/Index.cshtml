<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head> 
<body>
    <div class="text-center">
        <h1> Countdown Timer</h1>
    </div>
    <div class="container flex">
        @{
            DateTime endDate= new DateTime(2023, 11, 30, 7, 00, 00);
            TimeSpan difference= endDate- DateTime.Now;
        }
        <div class= "row">
            <div class="col text-center">
                <h2>Start Time</h2>
                @* --render DateTime.Now *@
                <h3>@DateTime.Now.ToString("MMMM dd, yyyy h:mm tt")</h3>
            </div>

            <div class="col text-center">
                <h2>End Time</h2>
                <h3>@endDate.ToString("MMMM dd, yyyy h:mm tt")</h3>
            </div>
        </div>

                @* --render time remaining *@
        <div class="row text-center">
            <h2>Time Remaining</h2>
            <h3>@difference.Days day(s), @difference.Hours hours(s), @difference.Minutes minutes(s)
                remaining
            </h3>
        </div>
    </div>
</body>
</html>